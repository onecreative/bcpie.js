{
    "name": "gulp-yarn",
    "version": "1.0.1",
    "description": "Automatically install node modules using Yarn.",
    "main": "lib/index.js",
    "scripts": {
        "test": "npm run build && NODE_ENV=test istanbul cover _mocha -R test/**/*.js -- --compilers js:babel-register",
        "lint": "xo src/**/*.js",
        "lint:fix": "xo src/**/*.js --fix",
        "build": "babel src --out-dir lib",
        "watch": "babel src --out-dir lib --watch",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "commit": "git-cz"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/warapitiya/gulp-yarn.git"
    },
    "keywords": [
        "gulpplugin",
        "yarn",
        "yarnpkg",
        "gulp",
        "install"
    ],
    "author": "Malindu Warapitiya <warapitiya93@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/warapitiya/gulp-yarn/issues"
    },
    "homepage": "https://github.com/warapitiya/gulp-yarn",
    "dependencies": {
        "chalk": "^2.1.0",
        "gulplog": "^1.0.0",
        "through2": "^2.0.3",
        "which": "^1.3.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-preset-env": "^1.6.0",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "commitizen": "^2.9.6",
        "conventional-changelog-cli": "^1.3.3",
        "coveralls": "^2.13.1",
        "cz-conventional-changelog": "^2.0.0",
        "istanbul": "1.1.0-alpha.1",
        "mocha": "^3.5.3",
        "vinyl": "^2.1.0",
        "xo": "^0.19.0"
    },
    "xo": {
        "envs": [
            "node"
        ],
        "globals": [],
        "rules": {
            "unicorn/filename-case": [
                "error",
                {
                    "case": "camelCase"
                }
            ]
        }
    },
    "directories": {
        "test": "test"
    }
}
